<h1>Student Show</h1>

<% if flash[:success] %>
  <h2 style="color:green;"><%= flash[:success] %></h2>
<% end %>

<h3><%= @student.name %></h3>
<p>Mod: <%= @student.mod %></p>
<h2>Ducks:</h2>
<% @student.ducks.each do |duck| %>
    <p><%= duck.name %></p>
<% end %>



<%= button_to "DELETE", student_path(@student), method: :delete %>

